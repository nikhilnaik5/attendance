{
    "name": "attendance",
    "version": "1.0.0",
    "main": "",
    "scripts": {
        "install-client": "cd client && npm install && cd ..",
        "install-server": "cd server && npm install && cd .. ",
        "render-postbuild": "npm run install-client && npm run install-server",
        "server": "npm start -prefix server",
        "client": "npm start -prefix client",
        "dev": "npm i concurrently && concurrently \"npm run server\" \"npm run client\""
    },
    "dependencies": {
        "concurrently": "^7.6.0"
    }
}
